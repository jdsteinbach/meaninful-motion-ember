<NewTodo @addTodo={{action "addTodo"}} />

<AnimatedContainer class="todo-lists">
  <TodoList
    @items={{outstandingItems}}
    @updateItem={{action "toggleCompleted"}}
    @editItem={{action "editTodo"}}
    @deleteItem={{action "deleteTodo"}}
    @animation={{slideItems}}
  />

  <TodoList
    class="todo-list--completed"
    @items={{completedItems}}
    @updateItem={{action "toggleCompleted"}}
    @editItem={{action "editTodo"}}
    @deleteItem={{action "deleteTodo"}}
    @animation={{slideItems}}
  />
</AnimatedContainer>

<TrashTodo />
